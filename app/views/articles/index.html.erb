<div style="text-align: center">
  <h1> Alpha Blog </h1>
</div>

<div style="margin-top: 2em; font-size: 30px; text-align:center;">
  <%= link_to({:action => 'new'}) do%>
    <div style="color:blue">
      New
    </div>
  <% end %>
</div>

<br><br><br>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-9">
      <h1>Listing Articles</h1>
      <table>
        <tr>
          <th style="font-size: 25px;">Title</th><br>
        </tr>
      <% index = 1 %>
      <% @articles.each do |article| %>
        <tr>
          <td>
            <%= link_to(article_path(article)) do %>
              <div style="text-decoration: none !important; color: blue; font-size:15px;">
                <%= "#{index}. " %><%= article.title %>
              </div>
            <% end %>
          </td>
        </tr>
        <% index += 1 %>
      <% end %>
      </table>
      <br>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
